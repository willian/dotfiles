#
#  # launchctl bootstrap gui/$UID "$HOME/Library/LaunchAgents/com.willian.audioinput.plist"
#  launchctl enable gui/$UID/com.willian.audioinput
#  launchctl start gui/$UID/com.willian.audioinput
#fi

plist="$HOME/Library/LaunchAgents/com.willian.audioinput.plist"
service="gui/$UID/com.willian.audioinput"

if [ -f "$plist" ]; then
  # unload if already loaded â€” prevents duplicate bootstrap errors
  launchctl bootout "$service" 2>/dev/null || true

  launchctl bootstrap "gui/$UID" "$plist"
  launchctl enable "$service"
  launchctl kickstart -k "$service"
fi
