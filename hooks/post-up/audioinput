##!/bin/sh
#
#if [ -f "$HOME/Library/LaunchAgents/com.willian.audioinput.plist" ]; then
#  launchctl load "$HOME/Library/LaunchAgents/com.willian.audioinput.plist"
#  # launchctl enable com.willian.audioinput
